    <script>
        document.addEventListener("DOMContentLoaded", function() {
            let konten = [
                { gambar: "stiker1.gif", ucapan: "Halloo Honeyy" },
                { gambar: "stiker2.gif", ucapan: "I made this for uu" },
                { gambar: "stiker3.gif", ucapan: "Fightingg honeyyy,I will always be with you" },
                { gambar: "stiker5.gif", ucapan: "I hope this gives you energyy" },
                { gambar: "stiker6.gif", ucapan: "I give you energy with thiss" },
                { gambar: "stiker4.gif", ucapan: "I love u honeyyyy" },
                { ucapan: "fightinggg my honeyy,I will wait for uu, I love youu honey ^^" },
                { ucapan: "เค้ารักเธอ ^^ - from mee, Hans" },
                { video: "video.mp4", ucapan: "its my honeyyy ^^" }
            ];

            let currentIndex = 0;
            const contentDiv = document.querySelector('.content');
            const nextButton = document.querySelector('.next');

            function updateContent(index) {
                const item = konten[index];
                if (item.gambar) {
                    contentDiv.innerHTML = `<img src="${item.gambar}" alt="Stiker" />`;
                } else if (item.video) {
                    contentDiv.innerHTML = `<video controls autoplay>
                                                <source src="${item.video}" type="video/mp4">
                                                Your browser does not support the video tag.
                                            </video>`;
                } else {
                    contentDiv.innerHTML = '';
                }
                contentDiv.innerHTML += `<p>${item.ucapan}</p>`;
            }

            nextButton.addEventListener('click', function() {
                currentIndex = (currentIndex + 1) % konten.length;
                updateContent(currentIndex);
            });

            updateContent(currentIndex);
        });
    </script>
